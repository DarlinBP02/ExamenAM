<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Fondo semi-transparente -->
        <shape
            android:shape="rectangle">
            <solid android:color="#80ffffff" />
            <corners android:radius="100dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</layer-list>
